{% extends 'PjplMaterialBundle:Grupa:base.html.twig' %}

{% block navi %}
	{{ parent() }}
	<li class="active"><a href="{{path('material_grupa_add')}}">Dodawanie grupy materiałów</a></li>
	<li><a href="{{path('material_grupa_list')}}">Edycja grupy materiałów</a></li>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="
				 col-sx-12
				 col-sm-offset-1 col-sm-10
				 col-md-offset-2 col-md-8
				 col-lg-offset-3 col-lg-6
				 ">
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="panel-title">
						Dodawanie grupy materiałów
					</div>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="
								 col-sx-12
								 col-sm-offset-1 col-sm-10
								 col-md-offset-2 col-md-8
								 col-lg-offset-3 col-lg-6
								 ">
							{{ form_start(form,  { 'attr': {'class': 'form'} }) }}
							<div class="form-group">
								{{ form_label(form.nazwa, null, { 'label_attr': {'class': ''} })}}
								{{ form_widget(form.nazwa,  { 'attr': {'class': 'form-control'} }) }}
								{{ form_errors(form.nazwa) }}
							</div>
							<div class="form-group">
								{{ form_widget(form.zatwierdz,  { 'attr': {'class': 'btn btn-primary'} }) }}
								{{ form_widget(form.cancel,  { 'attr': {'class': 'btn btn-default'} }) }}
							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
{% endblock %}