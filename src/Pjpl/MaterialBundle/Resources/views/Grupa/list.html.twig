{% extends 'PjplMaterialBundle:Grupa:base.html.twig' %}

{% block navi %}
	{{ parent() }}
	<li><a href="{{path('material_grupa_add')}}">Dodawanie grupy materiałów</a></li>
	<li class="active"><a href="{{path('material_grupa_list')}}">Edycja grupy materiałów</a></li>
{% endblock %}


{% block body %}

<table class="table">
	<caption>Lista grup materiałowych</caption>
	<thead>
		<tr>
			<th>Nazwa</th> <th></th>	<th></th>
		</tr>
	</thead>
	<tbody>
		 {% for grupa in grupa_array %}
        <tr>
					<td>{{ grupa.nazwa }}
							<a name="{{ 'grupa'~grupa.id }}"></a>
					</td>
					<td><a href="{{ path('material_grupa_edit', {'id' : grupa.id}) }}" class="btn btn-primary">Edytuj</a></td>
					<td><a href="{{ path('material_grupa_change_parent', {'id' : grupa.id}) }}" class="btn btn-primary">Zmień grupę nadrzędną</a></td>
					{% if ( delete_id is defined and delete_id == grupa.id) %}
						<td>
							<a href="{{ path('material_grupa_delete', {'id' : grupa.id, 'confirm': true}) }}"
								 class="btn btn-danger"
							>
								Potwierdzam usunięcie
							</a>
						</td>
					{% else %}
						<td>
							<a href="{{ path('material_grupa_delete', {'id' : grupa.id}) }}#{{ 'grupa'~grupa.id }}"
								 class="btn btn-primary"
							>
								Usuń grupę
							</a>
						</td>
					{% endif %}
				</tr>
    {% endfor %}
	</tbody>
</table>
{% endblock %}