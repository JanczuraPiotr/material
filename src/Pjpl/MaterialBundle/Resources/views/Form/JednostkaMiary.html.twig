<div class="row">
	<div class="
			 col-sx-12
			 col-sm-offset-1 col-sm-10
			 col-md-offset-2 col-md-8
			 col-lg-offset-3 col-lg-6
			 ">
		{{ form_start(form,  { 'attr': {'class': 'form-horizontal '} }) }}
			<div class="panel panel-default">
				<div class="panel-heading">
					<div class="panel-title">
						{{ title }}
					</div>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="
									 col-sx-12
									 col-sm-offset-1 col-sm-11
									 col-md-offset-1 col-md-11
									 col-lg-offset-1 col-lg-11
								 ">
							{{ form_errors(form) }}
							<div class="form-group">
								<div class="col-xs-0 col-sm-1 col-md-1 col-lg-1">
								</div>

								<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-right ">
									{{ form_label(form.nazwa)}}
								</div>
								<div class="col-xs-9 col-sm-7 col-md-7 col-lg-7">
									{{ form_widget(form.nazwa,  { 'attr': {'class': 'form-control'} }) }}
									{{ form_errors(form.nazwa) }}
								</div>

								<div class="col-xs-0 col-sm-1 col-md-1 col-lg-1">
								</div>

							</div>
							<div class="form-group">
								<div class="col-xs-0 col-sm-1 col-md-1 col-lg-1">
								</div>

								<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-right">
									{{ form_label(form.skrot)}}
								</div>

								<div class="col-xs-9 col-sm-7 col-md-7 col-lg-7">
									{{ form_widget(form.skrot,  { 'attr': {'class': 'form-control'} })  }}
									{{ form_errors(form.skrot) }}
								</div>

								<div class="col-xs-0 col-sm-1 col-md-1 col-lg-1">
								</div>

							</div>
						</div>
					</div>
				</div>
				<div class="panel-footer">
					<div class="form-group">
							<div class="col-xs-0 col-sm-1 col-md-2 col-lg-2">
							</div>

							<div class="col-xs-6 col-sm-5 col-md-4 col-lg-4">
								{{ form_widget(form.zatwierdz,  { 'attr': {'class': 'btn btn-primary btn-block'} }) }}
							</div>
							<div class="col-xs-6 col-sm-5 col-md-4 col-lg-4">
								{{ form_widget(form.cancel,  { 'attr': {'class': 'btn btn-default btn-block'} }) }}
							</div>

							<div class="col-xs-0 col-sm-1 col-md-2 col-lg-2">
							</div>
					</div>
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>







