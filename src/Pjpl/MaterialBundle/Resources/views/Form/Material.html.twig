{{ form_start(form,  { 'attr': {'class': 'form'} }) }}
<div class="row">
	<div class="
				 col-sx-12
				 col-sm-offset-1 col-sm-10
				 col-md-offset-2 col-md-8
				 col-lg-offset-3 col-lg-6
				 ">
		<div class="panel panel-default">
			<div class="panel-heading">
				<div class="panel-title">
					{{ title }}
					</div>
			</div>
			<div class="panel-body">
			{{ form_errors(form) }}
				<div class="form-group">
					{{ form_label(form.nazwa)}}
					{{ form_errors(form.nazwa,  { 'attr': {'class': 'form-control'} }) }}
					{{ form_widget(form.nazwa,  { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group">
					{{ form_label(form.kod)}}
					{{ form_errors(form.kod,  { 'attr': {'class': 'form-control'} }) }}
					{{ form_widget(form.kod,  { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group">
					{{ form_label(form.jednostka_miary)}}
					{{ form_errors(form.jednostka_miary,  { 'attr': {'class': 'form-control'} }) }}
					{{ form_widget(form.jednostka_miary,  { 'attr': {'class': 'form-control'} }) }}
				</div>
				<div class="form-group">
					{{ form_label(form.grupa_materialow)}}
					{{ form_errors(form.grupa_materialow,  { 'attr': {'class': 'form-control'} }) }}
					{{ form_widget(form.grupa_materialow,  { 'attr': {'class': 'form-control'} }) }}
				</div>
			</div>
			<div class="panel-footer">
				<div class="form-group">
					{{ form_widget(form.zatwierdz,  { 'attr': {'class': 'btn btn-primary'} }) }}
					{{ form_widget(form.cancel,  { 'attr': {'class': 'btn btn-default'} }) }}
				</div>
			</div>
		</div>
	</div>
</div>
{{ form_end(form) }}

